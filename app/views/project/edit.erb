<h1> Edit Project </h1>

<form method = "post" action = "/projects/<%=@project.id%>">
  <input id = "hidden" type = "hidden" name = "_method" value = "PATCH">
  <input type = "text" name = "title" value = "<%=@project.title%>"><br><br>
  <input type = "text" name = "about" value = "<%=@project.about%>"><br><br>

  <% @project.tasks.each do |task|
    <h2> <%= tasks.name %> </h2><br><br>
    <h2> <%= tasks.content %> </h2><br><br>
    <a href="/tasks/<%= task.id %>/edit">Edit Task</a>
    <a href="/tasks/<%= task.id %>/delete">Dete Task</a>
  <% end %>

  <br>
  <input class = "btn btn-primary" type = "submit" name = "update" value = "Update">
</form>
